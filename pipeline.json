{
  "image": "docker.klnsdr.com/nyx-cli:1.4",
  "pipeline": {
    "default": [
      "mkdir ~/.nyx",
      "nyx build",
      "printf 'https://repo.klnsdr.com\\n${NYX_REPO_KLNSDR_COM_PASSWORD}' | nyx login",
      "nyx push"
    ],
    "release": [
      "mkdir ~/.nyx",
      "printf 'https://repo.klnsdr.com\\n${NYX_REPO_KLNSDR_COM_PASSWORD}' | nyx login",
      "nyx release",
      "nyx build",
      "nyx push",
      "nyx snapshot"
    ]
  }
}
